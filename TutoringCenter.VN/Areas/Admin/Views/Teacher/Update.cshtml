@using TutoringCenter.VN.Models;
@model Teacher
@{
    ViewData["Title"] = "SỬA GIA SƯ";
}
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Sửa gia sư</h4>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item"><a href="." class="text-muted">Admin</a></li>
                        <li class="breadcrumb-item text-muted active" aria-current="page">Trang chủ</li>
                        <li class="breadcrumb-item text-muted active" aria-current="page">Gia sư</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="col-5 align-self-center">
            <div class="customize-input float-right">
                <button type="button" class="btn waves-effect waves-light btn-danger btn-rounded px-5" onclick="window.history.back()">Hủy</button>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">SỬA GIA SƯ</h4>
                    @if (Model.Avatar != null && Model.Avatar.Length > 0)
                    {
                        <div class="text-center">
                            <img src="@Model.Avatar" class="mt-3 mb-3" style="width: 120px; height: 120px;" />
                        </div>
                    }
                    <form method="post" asp-action="Upload" asp-controller="Teacher" enctype="multipart/form-data">
                        @Html.HiddenFor(x => x.TId)
                        @Html.HiddenFor(x => x.Avatar)
                        @Html.HiddenFor(x => x.CreateAt)
                        @Html.HiddenFor(x => x.UpdateAt)
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Cập nhật</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="avatar">
                                <label class="custom-file-label" for="inputGroupFile01">Chọn tệp tin</label>
                            </div>
                        </div>
                        <h4 class="card-title mt-3">Họ tên gia sư</h4>
                        <input asp-for="DisplayName" type="text" class="form-control" id="prenametext" placeholder="Họ tên gia sư">
                        <h4 class="card-title mt-3">Mô tả</h4>
                        <textarea asp-for="Description" class="form-control" rows="2" id="tDescription"></textarea>
                        <button type="submit" class="btn btn-block btn-rounded btn-success mt-5">CẬP NHẬT</button>
                        @Html.Raw(ViewBag.notification)
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Container fluid  -->
<!-- ============================================================== -->
@section Scripts {
    <!--This page plugins -->
    <script src="assets/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="dist/js/pages/datatable/datatable-basic.init.js"></script>
    <script src="dist/js/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        function goBack() {
            window.history.back()
        }
        $(document).ready(function () {
            var path = document.location.pathname;
            var directory = path.substring(path.indexOf('/'), path.lastIndexOf('/'));
            directory = directory.substring(directory.indexOf('/'), directory.lastIndexOf('/'));
            CKEDITOR.replace("tDescription", {
                height: 600,
                filebrowserUploadUrl: `${directory}/ImageUpload`,
                filebrowserUploadMethod: "form"
            });
        });</script>
}
<style>

    .table td, .table th {
        vertical-align: middle;
    }
</style>
