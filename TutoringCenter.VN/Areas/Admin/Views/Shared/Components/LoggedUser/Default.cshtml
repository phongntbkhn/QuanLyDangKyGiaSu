@{
    Layout = null;
    String? userAvatar = User.Claims.FirstOrDefault(c => c.Type == "AVATAR").Value;
    if (userAvatar == null || userAvatar.Length < 5)
    {
        userAvatar = "assets/images/users/logofinal_128.png";
    }
}
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="javascript:void(0)" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <img src="@userAvatar" alt="user" class="rounded-circle" width="40" height="40">
        <span class="ml-2 d-none d-lg-inline-block"><span>Xin chào,</span> <span class="text-light Bold">@User.Identity.Name</span> <i data-feather="chevron-down" class="svg-icon"></i></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right user-dd animated flipInY">
        <a class="dropdown-item" href="javascript:void(0)">
            <i data-feather="user"
               class="svg-icon mr-2 ml-1"></i>
            Hồ sơ
        </a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-controller="Login" asp-action="Logout">
            <i data-feather="power"
               class="svg-icon mr-2 ml-1"></i>
            Đăng xuất
        </a>
    </div>
</li>