@using TutoringCenter.VN.Models
@model IEnumerable<User>
@{
    IEnumerable<Feedback> feedbacks = ViewBag.feedbacks;
    ViewData["Title"] = "HOME";
}

<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Chào @User.Identity.Name!</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item">
                            <a href=".">Tổng quát</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="col-5 align-self-center">
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- *************************************************************** -->
    <!-- Start First Cards -->
    <!-- *************************************************************** -->
    <div class="card-group">
        <div class="card border-right">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <div class="d-inline-flex align-items-center">
                            <h2 class="text-dark mb-1 font-weight-medium">@ViewBag.newsCategoryCount</h2>
                        </div>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Danh mục tin</h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                    </div>
                </div>
            </div>
        </div>
        <div class="card border-right">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <h2 class="text-dark mb-1 w-100 text-truncate font-weight-medium">
                            @ViewBag.newsCount
                        </h2>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">
                            Tin bài
                        </h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                    </div>
                </div>
            </div>
        </div>
        <div class="card border-right">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <div class="d-inline-flex align-items-center">
                            <h2 class="text-dark mb-1 font-weight-medium">@ViewBag.teacherCount</h2>
                        </div>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Giảng viên</h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                    </div>
                </div>
            </div>
        </div>
        <div class="card border-right">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <div class="d-inline-flex align-items-center">
                            <h2 class="text-dark mb-1 font-weight-medium">@ViewBag.newTeacherCount</h2>
                        </div>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Giảng viên đăng ký mới</h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <h2 class="text-dark mb-1 font-weight-medium">@ViewBag.courseCount</h2>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Lớp học</h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                        @*<span class="opacity-7 text-muted"><i data-feather="globe"></i></span>*@
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <h4 class="card-title">Danh sách quản trị viên (@Model.Count())</h4>
                        <div class="ml-auto">
                            <div class="dropdown sub-dropdown">
                                <button class="btn btn-link text-muted dropdown-toggle" type="button"
                                        id="dd1" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                    <i data-feather="more-vertical"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table no-wrap v-middle mb-0">
                            <thead>
                                <tr class="border-0">
                                    <th class="border-0 font-14 font-weight-medium text-muted">
                                        Thông tin
                                    </th>
                                    <th class="border-0 font-14 font-weight-medium text-muted px-2">
                                        Quyền hạn
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (User user in Model)
                                {
                                    <tr>
                                        <td class="border-top-0 px-2 py-4">
                                            <div class="d-flex no-block align-items-center">
                                                <div class="mr-3">
                                                    <img src="@user.Avatar"
                                                         alt="user" class="rounded-circle" width="45"
                                                         height="45" />
                                                </div>
                                                <div class="">
                                                    <h5 class="text-dark mb-0 font-16 font-weight-medium">
                                                        @user.DisplayName
                                                    </h5>
                                                    <span class="text-muted font-14">@user.Username</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="border-top-0 text-muted px-2 py-4 font-14">@TutoringCenter.VN.Utils.RoleMaps.GetRoleName(user.Role)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- *************************************************************** -->
    <!-- End Top Leader Table -->
    <!-- *************************************************************** -->
    <!-- ============================================================== -->
    <!-- FeedBack REgion -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách phản hồi</h4>
                    <div class="table-responsive">
                        <table id="multi_col_order"
                               class="table table-striped table-bordered display no-wrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="text-center">STT</th>
                                    <th class="text-center">Họ tên - Email</th>
                                    <th class="text-center">Địa chỉ - SĐT</th>
                                    <th class="text-center">Ngày gửi</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < feedbacks.Count(); i++)
                                {
                                    Feedback feedback = feedbacks.ElementAt(i);
                                    <tr>
                                        <td class="text-center">@(i+1)</td>
                                        <td class="text-center">@feedback.Fullname<br>@feedback.Email</td>
                                        <td>@feedback.Address<br />(@feedback.Phone)</td>
                                        <td>@feedback.CreateAt</td>
                                        <td class="text-center">
                                            <button type="button" class="btn waves-effect waves-light btn-info" data-toggle="modal" data-target="#info-alert-modal-@feedback.FId.ToString()">Nội dung</button>
                                            <a type="button" class="btn waves-effect waves-light btn-danger" href="Home/DeleteFeedback/@feedback.FId">Xóa</a>
                                        </td>

                                        <!-- Info Alert Modal -->
                                        <div id="info-alert-modal-@feedback.FId.ToString()" class="modal fade" tabindex="-1" role="dialog"
                                             aria-hidden="true">
                                            <div class="modal-dialog modal-sm">
                                                <div class="modal-content">
                                                    <div class="modal-body p-4">
                                                        <div class="text-center">
                                                            <i class="dripicons-information h1 text-info"></i>
                                                            <h4 class="mt-2">@feedback.Fullname</h4>
                                                            <p class="mt-3">
                                                                @feedback.Content
                                                            </p>
                                                            <button type="button" class="btn btn-info my-2"
                                                                    data-dismiss="modal">
                                                                Đóng
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div><!-- /.modal-content -->
                                            </div><!-- /.modal-dialog -->
                                        </div><!-- /.modal -->
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- FeedBack REgion -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Container fluid  -->
<!-- ============================================================== -->