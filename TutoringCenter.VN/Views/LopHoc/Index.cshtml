@using TutoringCenter.VN.Models
@model Course
@{
    Layout = "~/Views/Shared/_MetaLayout.cshtml";
    ViewData["Title"] = "Index";
    IEnumerable<Course> courses = ViewBag.course;
}
<div class="our-customer section-padd-top30">
    <div class="container-fluid head_bg_2">
        <div class="our-customer-wrapper">

            <form asp-action="index" asp-controller="LopHoc">
                <label for="fname">Tìm kiếm lớp học:</label>
                <input class="form-control" type="text" id="tenLopHoc" name="tenLopHoc"><br><br>
                <input style="margin-bottom: 5px" type="submit" value="Tìm kiếm">
            </form>

            <!-- Section Tittle -->
            <div class="row d-flex justify-content-center">
                <div class="col-xl-12">
                    <div>
                        <h2 style="color: #ffffff; background-color: #802eb7"><strong>Một số lớp học tiêu biểu</strong></h2>
                    </div>
                </div>
                <div class="col-xl-8">
                    <div class="section-slogan">
                        <div class="text-top">Chất lượng - Vui vẻ</div>
                    </div>
                </div>
            </div>
            <div class="row">
                @for (int i = 0; i < courses.Count(); i++)
                {
                    Course course = courses.ElementAt(i);

                    <div class="col-4">
                        <div class="single-customer mb-100">
                            <div class="what-img d-flex justify-content-center">
                                <img src="@course.Image" alt="" width="100%" height="100%">
                            </div>
                            <div class="what-cap text-center">
                                <h4><a href="#">@course.Name</a></h4>
                                <div class="shortcut">
                                    @Html.Raw(course.Description)
                                </div>
                                <a data-animation="fadeInLeft" data-delay="1.0s" href="/ChiTietLopHoc/Index/@course.CId" class="btn radius-btn" tabindex="0" style="animation-delay: 1s;">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

