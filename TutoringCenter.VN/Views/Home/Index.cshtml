        <div class="our-customer section-padd-top30">
            <div class="container-fluid">
                <div class="our-customer-wrapper">
                    <!-- Section Tittle -->
                    <div class="row d-flex justify-content-center">
                        <div class="col-xl-8">
                            <div class="section-tittle text-center">
                                <h2 style="margin-bottom: 0 !important;">Gia sư của chúng tôi</h2>
                            </div>
                        </div>
                        <div class="col-xl-8">
                            <div class="section-slogan">
                                <div class="text-top">Chu đáo - Nhiệt tình - Tận tâm</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @for (int i = 0; i < teacher.Count(); i++)
                        {
                            Teacher teachers = teacher.ElementAt(i);

                            <div class="col-4">
                                <div class="single-customer mb-100">
                                    <div class="what-img d-flex justify-content-center">
                                        <img src="@teachers.Avatar" alt="" width="100%" height="100%">
                                    </div>
