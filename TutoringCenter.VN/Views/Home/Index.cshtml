                                    <div class="views-field views-field-field-image">
                                        <div class="field-content">
                                            <img typeof="foaf:Image"
                                                 src="~/Landing/assets/img/comment/comment_2.png"
                                                 width="215" height="215" alt="">
                                        </div>
                                    </div>
                                    <div class="views-field views-field-title">
                                        <span class="views-label views-label-title">Phụ huynh: </span> <span class="field-content">
                                        <a href="/tran-hua-tho-anh">Phạm Văn Đồng</a>
