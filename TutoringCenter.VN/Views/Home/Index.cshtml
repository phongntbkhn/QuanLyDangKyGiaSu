@{
    Layout = "~/Views/Shared/_MetaLayout.cshtml";
    ViewData["Title"] = "TRANG CHỦ";
    IEnumerable<Feedback> feedbacks = ViewBag.feedbacks;
    IEnumerable<Teacher> teacher = ViewBag.teacher;
    IEnumerable<AboutUs> aboutUs = ViewBag.aboutUs;
}

    <main>
        <!-- Slider Area Start-->
        <div class="slider-area">
            <div class="slider-active">
                <div class="single-slider slider-height slider-padding d-flex align-items-center">
                    <div class="head_bg">
                        <div class="head_opacity_bg">
                            <div class="container">
                                <div class="row d-flex align-items-center">
                                    <div class="col-lg-12 col-md-12 ">
                                        <div class="hero__caption">
                                            <span data-animation="fadeInUp" data-delay=".4s">Tạo nên giá trị sống</span>
                                            <h1 data-animation="fadeInUp" data-delay=".6s">Trung tâm gia sư<br>Appco</h1>
                                            <p data-animation="fadeInUp" data-delay=".8s">
                                                Với phương châm “Thấu hiểu học sinh là
                                                bước đi đầu tiên của người làm thầy” chúng tôi luôn lấy chữ Tâm và chữ Đức của
                                                người làm thầy để truyền đạt lại kiến thức cho học sinh, giúp học sinh đạt được
                                                kết quả cao nhất trong học tập và đạt được thành công trong đời sống.
                                            </p>
                                            <!-- Slider btn -->
                                            <div class="slider-btns">
                                                <!-- Hero-btn -->
                                                <a data-animation="fadeInLeft" data-delay="1.0s" href="Contact"
                                                   class="btn radius-btn">Liên hệ ngay</a>
                                                <!-- Video Btn -->
                                                <a data-animation="fadeInRight" data-delay="1.0s"
                                                   class="popup-video video-btn ani-btn" href="#">
                                                    <i class="fas fa-play"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Slider Area End -->
        <!-- Best Features Start -->
        <section class="best-features-area section-padd4">
            <div class="container">
                <div class="row justify-content-end">
                    <div class="col-xl-8 col-lg-10">
                        <!-- Section Tittle -->
                        <div class="row">
                            <div class="col-lg-10 col-md-10">
                                <div class="section-tittle">
                                    <h2>Về chúng tôi</h2>
                                </div>
                            </div>
                        </div>
                        <!-- Section caption -->
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12">
                                <div class="single-features mb-70">
                                    <div class="features-caption">
                                        @*<h3 class="text-justify">Trung tâm gia sư Appco nhận dạy kèm tại nhà</h3>
                                        <p style="font-size:18px">Tất cả các môn học từ lớp 1 đến lớp 12: Toán, Lý, Hoá, Anh, Văn, Sinh, Sử, Địa...</p>
                                        <p style="font-size:18px">Giao tiếp tiếng Anh, Pháp, Trung, Nhật, Hàn, Đức...</p>
                                        <p style="font-size:18px">Các môn năng khiếu : vẽ, đàn, organ, guitar, piano...</p>
                                        <p style="font-size:18px">Tất cả các môn học từ lớp 1 đến lớp 12: Toán, Lý, Hoá, Anh, Văn, Sinh, Sử, Địa...</p>
                                        <p style="font-size:18px">Tin học văn học, Autocad...</p>*@
                                        @for (int i = 0; i < aboutUs.Count(); i++)
                                        {
                                            AboutUs aboutUss = aboutUs.ElementAt(i);
                                            @Html.Raw(@aboutUss.Title);
                                        }
                                        <a href="AboutUs" class="btn radius-btn">Tìm hiểu thêm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Shpe -->
            <div class="features-shpae d-none d-lg-block">
                <img src="~/Landing/assets/img/shape/aboutus.jpeg" alt="" width="660px" height="510px"
                     style="border-radius: 50%;">
            </div>
        </section>
        <!-- Best Features End -->
